<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- "app_name" is now defined in build.gradle -->

    <!-- server urls -->
    <!-- Replace with your private server URL -->
    <string name="matrix_org_server_url" translatable="false">https://YOUR_SERVER_DOMAIN</string>

    <!-- Rageshake configuration -->
    <!-- Disabled for private server -->
    <string name="bug_report_url" translatable="false"></string>
    <string name="bug_report_app_name" translatable="false">private-server</string>
    <string name="bug_report_auto_uisi_app_name" translatable="false">private-server-auto-uisi</string>

    <!--
        Pusher config for the application
        https://matrix.org/docs/spec/client_server/r0.4.0#id128
     -->

    <!-- Note: pusher_http_url should have path '/_matrix/push/v1/notify' -->
    <!-- It is the push gateway for FCM embedded distributor -->
    <!-- Replace with your private push gateway if you have one -->
    <string name="pusher_http_url" translatable="false">https://YOUR_SERVER_DOMAIN/_matrix/push/v1/notify</string>
    <!-- Note: default_push_gateway_http_url should have path '/_matrix/push/v1/notify' -->
    <!-- It is the push gateway for UnifiedPush -->
    <string name="default_push_gateway_http_url" translatable="false">https://YOUR_SERVER_DOMAIN/_matrix/push/v1/notify</string>
    <!-- Note: pusher_app_id cannot exceed 64 chars -->
    <string name="pusher_app_id" translatable="false">im.vector.app.android</string>

    <!-- preferred jitsi domain -->
    <!-- Replace with your private Jitsi server if you have one -->
    <string name="preferred_jitsi_domain" translatable="false">YOUR_SERVER_DOMAIN</string>

    <!-- Room directory servers - EMPTY for private server (no federation) -->
    <string-array name="room_directory_servers" translatable="false">
        <!-- Empty - federation disabled -->
    </string-array>

    <!-- Permalink config - only our own server -->
    <string-array name="permalink_supported_hosts" translatable="false">
        <!-- Only your private server -->
        <item>YOUR_SERVER_DOMAIN</item>
    </string-array>

</resources>
